@{ 
  Layout = "_Layout";
}

@model PestFinder.Models.Location


  @using (Html.BeginForm())
  {
    <div class="row align-items-stretch">
    <div class="col-2">
      @Html.Label("Location Name")
      @Html.Label("Pest Rating")
      @Html.Label("Action Plan")
    </div>

    <div class="col-6">
      @Html.TextBoxFor(model => model.Name)
      @Html.TextBoxFor(model => model.PestRating)
      @Html.TextBoxFor(model => model.ActionPlan)
    </div>
    </div>

    <button type="submit">Create Location</button>
  }
