@{
  Layout = "_Layout";
}

@model PestFinder.Models.Pest

<h2>Edit</h2>

<h4>Edit this pest: @Html.DisplayFor(model => model.Type)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PestId)

  @Html.LabelFor(model => model.Type)
  @Html.TextBoxFor(model => model.Type)

  @Html.LabelFor(model => model.Sighting)
  @Html.EditorFor(model => model.Sighting)
  // , new { type="date" }

  @Html.LabelFor(model => model.Quantity)
  @Html.EditorFor(model => model.Quantity)
  // , min:0

  @Html.LabelFor(model => model.Alive)
  @Html.CheckBoxFor(model => model.Alive)

  @Html.LabelFor(model => model.Action)
  @Html.TextBoxFor(model => model.Action)

  @Html.Label("Select Location")
  @Html.DropDownList("LocationId")

  <input type="submit" value="Save" />
}

<a href='@Url.Action("Index")'><button>Back to List</button></a>
<a href='@Url.Action("Index", "Home")'><button>Home</button></a>