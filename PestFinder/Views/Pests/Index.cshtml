@{
  Layout ="_Layout";
}

@using PestFinder.Models;
@model IEnumerable<PestFinder.Models.Pest>

<h1>Pests recorded by @User.Identity.Name</h1>

@if (Model.Any())
{
  <ul>
  @foreach (Pest pest in Model)
  {
    <li>@Html.ActionLink($"{pest.Type}", "Details", new { id = pest.PestId }) </li>
  } 
  </ul>
}
else
{
  <h3>No Pests have been found yet!</h3>
}

<a href='@Url.Action("Create")'><button>Add new pest</button></a>
<a href='@Url.Action("Index", "Home")'><button>Home</button></a>